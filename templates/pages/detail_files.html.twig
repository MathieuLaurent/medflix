{% extends 'base.html.twig' %}


{% block body %}


    <div class="d-flex flex-row bd-highlight mb-3">

        <div class="p-2 bd-highlight">
            {% include 'inc/_sidebar.html.twig' %}
        </div>

        <div class="p-2 bd-highlight justify-content-center container-fluid">





{% if img is not null %}                    
    <h2 class="m-4 sub-title">{{img.name}}</h2>

            <div class="d-flex  justify-content-center p-3">

               <img  class="img-detail" src="{{asset('/img/' ~ img.link)}}"/>

            </div>

    <div class="d-flex  justify-content-center p-3">
        <a href="{{asset('/img/' ~ img.link)}}" download="{{asset('/img/' ~ img.link)}}" class="btn btn-new m-5">Télécharger l'image</a> 
        <a href="{{ path('files')}}" class="btn m-5">Retour à la page précédente</a>
    </div>
                        

         
         {% endif %}

<!------------------------------------------------------------------------------------------- CARD VIDEO -->

{% if video is not null %}
<h5 class="m-4 sub-title">Les vidéos</h5>

<div class="row gx-5 row-cols-xxl-3 justify-content-center p-3 box">

            <div class="col col-sm-6 mb-2">
                <div class="card card-custom mb-4 p-1">                        
                    
                    <video controls class="card-img-top video-custom">
                        <source src="{{asset('/video/' ~ video.link)}}">
                    </video>
                    
                    <div class="card-body p-3">
                        
                            
                            <h5 class="card-title mb-4">{{video.name}} </h5>

                           
                        
                    </div>
                </div>
            </div>

</div>
{% endif %}

<!------------------------------------------------------------------------------------------- CARD PDF -->

{% if pdf is not null %}
<h5 class="m-4 sub-title">Les pdf</h5>

<div class="row gx-5 row-cols-xxl-3 justify-content-center p-3 box">

            <div class="col col-sm-6 mb-2">
                <div class="card card-custom mb-4 p-1">                        
                    
                    <div class="card-body p-3">
                        
                            
                            <h5 class="card-title mb-4">{{pdf.name}} </h5>

                           
                        
                    </div>
                </div>
            </div>

            

</div>
{% endif %}

    </div>
                    
</div>

{% endblock %}
