<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Medflix{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
        {# public/css/style.css #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>
        {# public/js/script.js #}
    </head>
    <body class="body">

        {% include 'inc/header.html.twig' %}

{% block body %}

<header class="d-flex justify-content-center align-items-center header">
    <section class="w-50 p-3">
      <p class="lead m-auto fw-bolder display-4 text-end slogan">Les plus belles photos de voyages pour une évasion assurée.</p>
    
    </section>

    <section class="w-50 p-3">

<div class="container py-3  d-flex justify-content-center">
    <div class="card card-login m-5">
      <div class="card-body p-3 m-3">

          <div class="md-5 mt-md-3 pb-2">

              <h2 class="fw-bold title">S'enregistrer</h2>

          </div>

          <p class="mb-5">

    {{ form_start(registrationForm) }}

    <div class="form-floating mb-3">

        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control search'}}) }}
        {{ form_label(registrationForm.email, 'E-Mail', {'label_attr': {'class': 'form-label'}}) }}

    </div>

    <div class="form-floating mb-3">

        {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control search'}}) }}
        {{ form_label(registrationForm.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}

    </div>

    <div class="form-floating mb-3">

        {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control search'}}) }}
        {{ form_label(registrationForm.firstname, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}

    </div>

    <div class="form-floating mb-3">

        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control search'}}) }}
        {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}

    </div>

    <div class="text-center">

        <button type="submit" class="btn">Valider</button>

    </div>

    {{ form_end(registrationForm) }}

                </p>
            </div>
        </div>
    </section>

</header>

{% endblock %}

</body>


{# script js #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


</html>

