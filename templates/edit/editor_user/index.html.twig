{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ouser in user %}
            <tr>
                <td>{{ ouser.id }}</td>
                <td>{{ ouser.name }}</td>
                <td>
                    <a href="{{ path('editor_user_show', {'id': ouser.id}) }}">show</a>
                    <a href="{{ path('editor_user_edit', {'id': ouser.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
