{% extends 'base.html.twig' %}

{% block title %}Index des utilisateurs{% endblock %}

{% block body %}
        <div class="container py-3  d-flex justify-content-center">
            <div class="card card-login m-5">
            <form class="card-body p-5 m-3">

                <div class="md-5 mt-md-4 pb-3">

                    <h2 class="fw-bold mb-2 title">Index des utilisateurs</h2>

                </div>

                <p class="mb-5">

                    <div class="example-wrapper">
                    
                        <table class="table">
        <tbody>
        {% for ouser in user %}
        <tr class="text-center">
            <td  colspan="2">{{ ouser.name }} {{ ouser.firstname }}</td>
            <td colspan="2"></td>
            <td>
                    <a href="{{ path('editor_user_show', {'id': ouser.id}) }}" class="btn mx-2">Afficher</a>
                    <a href="{{ path('editor_user_edit', {'id': ouser.id}) }}" class="btn btn-new mx-2">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun documents trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex justify-content-center">

        <a href="{{path('editor')}}" class="btn m-3">Retour à la gestion du back office</a>

    </div>
        </div>

        </p>

        </div>
        </div>

{% endblock %}
