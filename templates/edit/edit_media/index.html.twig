{% extends 'base.html.twig' %}

{% block title %}Index des médias{% endblock %}

{% block body %}
        <div class="container py-3  d-flex justify-content-center">
            <div class="card card-bo m-5">
            <div class="card-body p-5 m-3">

                <div class="md-5 mt-md-4 pb-3">

                    <h2 class="fw-bold mb-2 title">Index des médias</h2>

                </div>

                <p class="mb-5">

                    <div class="example-wrapper">
                    
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Lien</th>
                                    <th>Catégorie</th>
                                    <th>Créé le</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for medium in media %}
                                <tr>
                                    <td>{{ medium.name }}</td>
                                    <td>{{ medium.link }}</td>
                                    <td>{{ medium.category.name}}</td>
                                    <td>{{ medium.createdAt ? medium.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>
                                        <a href="{{ path('edit_media_show', {'id': medium.id}) }}" class="btn">Afficher</a>
                                        <a href="{{ path('edit_media_edit', {'id': medium.id}) }}" class="btn btn-new">Editer</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">Aucun documents trouvés</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                                 </table>

                                 <div class="d-flex justify-content-center m-3">
                                        <a href="{{ path('edit_media_new') }}" class="btn btn-new m-2">Créer un nouveau média</a>
                                        <a href="{{path('editor')}}" class="btn m-2">Retour à la gestion du back office</a>
                                 </div>
                                    </div>

                                    </p>

                                    </div>
                                    </div>
                                    </div>
{% endblock %}
