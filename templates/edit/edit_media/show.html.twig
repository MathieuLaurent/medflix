<div class="container py-3  d-flex justify-content-center">
    <div class="card card-login m-5">
      <div class="card-body p-5 m-3">

          <div class="md-5 mt-md-4 pb-3">

              <h2 class="fw-bold mb-2 title">{{ medium.name }}</h2>

          </div>

          <p class="mb-1">

            <div class="example-wrapper">
                <img src="{{asset('/imgInter/' ~ medium.link)}}" class="img-bo mb-1">
            
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ medium.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ medium.name }}</td>
                        </tr>
                        <tr>
                            <th>Lien</th>
                            <td>{{ medium.link }}</td>
                        </tr>
                        <tr>
                            <th>Créer le</th>
