                        </tr>
                    </tbody>
    </table>
        <div class="d-flex justify-content-center m-3">
            <a href="{{ path('edit_media_index') }}" class="btn">Retour à la liste</a>

            <a href="{{ path('edit_media_edit', {'id': medium.id}) }}" class="btn btn-new mx-3">Editer</a>

